{% extends 'base.html.twig' %}

        {% block body %}
<a href="{{ path('todo') }}" class="btn btn-default">Back To the List</a>
<ul class="list-group list-group-flush">
<li class="list-group-item">{{ todo.id }}</li>
<li class="list-group-item active"><h1>{{ todo.name }}</h1></li>
<li class="list-group-item">{{ todo.category }}</li>
<li class="list-group-item">{{ todo.description }}</li>
<li class="list-group-item">{{ todo.todoDate }}</li>
<li class="list-group-item">{{ todo.createDate | date('d-m-Y') }}</li>
</ul>
        {% endblock %}